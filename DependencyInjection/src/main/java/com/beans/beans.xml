<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	
	<bean id="person" class="rootPathBeans.Person">
		<constructor-arg value="101" name="id"></constructor-arg>
		<constructor-arg value="Shamim" name="name"></constructor-arg>
		<constructor-arg ref="address" name="address"></constructor-arg>
	</bean>
	<bean id="address" class="rootPathBeans.Address">
		<constructor-arg value="Aditmari" name="thana"></constructor-arg>
		<constructor-arg value="Lalmonirhat" name="district"></constructor-arg>
	</bean>
</beans>
